        <link rel="icon" href="assets/logo.svg" type="image/x-icon" />

        <!-- Twitter Card Meta Tags -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta
            name="twitter:image"
            content="/assets/logo.svg"
        />
        <link rel="icon" href="/assets/logo.svg" type="image/x-icon" />
