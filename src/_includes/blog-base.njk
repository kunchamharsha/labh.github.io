        ></script>

        <title>{{ title }}</title>
    </head>
    <body>
        {% include "blog-header.njk" %}

        <div class="menu-bar">
            <ul>
                <li><a href="/index.html">Home</a></li>
                <li><img src="/assets/dote.svg" alt="dote" /></li>
                {{
                    menu | safe
                }}
            </ul>
            <button class="share-btn"  onclick="sharePage()">
                Share
                <img src="/assets/share.svg" alt="Share" class="share-icon" />
            </button>
        </div>

        {{ content | safe }}

        <div class="blur-effect display-none"></div>

        {% include "footer.njk" %}

