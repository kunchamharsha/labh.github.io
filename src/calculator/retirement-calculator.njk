<script>
    /*
        How to calculate Retirement Plan Steps:
        - Calculate how much your current monthly expenses will grow by retirement age.
            - Future Expenses = Current Expenses × (1 + Inflation Rate) ^ Years to Retirement
        - Multiply future monthly expenses by 12 to get yearly expenses.
            - Annual Expenses = Future Expenses * 12
        - Calculate total money needed for retirement years.
            - Retirement Corpus = Annual Expenses * Retirement Years * coefficent (1, 1.5, 2)
        - Find how much you need to invest monthly to reach the corpus.
            - SIP = (Corpus × Monthly Return Rate) / ((1 + Monthly Return Rate) ^ Total Months - 1)
        */

    const retirementAge = 60;
    const inflationRate = 0.06;
    const yearsAfterRetirement = 20;
    let yearsToRetirement = null;
    const monthlyReturnRate = 0.01;
    const annualReturnRate = (
        (Math.pow(1 + monthlyReturnRate, 12) - 1) *
        100
    ).toFixed(2);
    let currentExpenses = null;
    let sipRequired = null;
    let coefficent = 1;

    function calculateFutureExpenses(
        currentExpenses,
        inflationRate,
        yearsToRetirement
    ) {
        return currentExpenses * Math.pow(1 + inflationRate, yearsToRetirement);
    }

    function calculateRetirementCorpus(
        annualExpensesAtRetirement,
        yearsAfterRetirement
    ) {
        return annualExpensesAtRetirement * yearsAfterRetirement;
    }

    function calculateSIPRequired(
        futureValue,
        monthlyReturnRate,
        monthsToInvest
    ) {
        return (
            (futureValue * monthlyReturnRate) /
            (Math.pow(1 + monthlyReturnRate, monthsToInvest) - 1)
        );
    }

    function retirementPlan(
        currentExpenses,
        inflationRate,
        yearsToRetirement,
        yearsAfterRetirement,
        monthlyReturnRate
    ) {
        const futureExpenses = calculateFutureExpenses(
            currentExpenses,
            inflationRate,
            yearsToRetirement
        );

        const annualExpensesAtRetirement = futureExpenses * 12;

        const corpusRequired =
            calculateRetirementCorpus(
                annualExpensesAtRetirement,
                yearsAfterRetirement
            ) * coefficent;

        const monthsToInvest = yearsToRetirement * 12;
        const sipRequired = calculateSIPRequired(
            corpusRequired,
            monthlyReturnRate,
            monthsToInvest
        );

        return {
            futureExpenses: futureExpenses.toLocaleString("en-IN"),
            annualExpensesAtRetirement:
                annualExpensesAtRetirement.toLocaleString("en-IN"),
            corpusRequired: corpusRequired.toLocaleString("en-IN"),
            sipRequired: sipRequired.toLocaleString("en-IN"),
        };
    }

    $(document).ready(function () {
        $(".faq-question").click(function () {
            var $item = $(this).closest(".faq-item");

            $(".faq-item").not($item).removeClass("open");

            $item.toggleClass("open");
        });

        function updateSliderBackground(slider) {
            const value =
                ((slider.value - slider.min) / (slider.max - slider.min)) * 100;
            $(slider).css(
                "background",
                `linear-gradient(to right, #9b5de5 ${value}%, #d3bfff ${value}%)`
            );
            $(`#${slider.id}-value`).text(slider.value);

            if (slider.id == "age-slider") {
                yearsToRetirement = retirementAge - slider.value;
            } else {
                currentExpenses = slider.value;
            }
        }

        function updateValues() {
            const howYouRetire = $('input[name="retirement"]:checked').val();
            if (howYouRetire == "luxury") {
                coefficent = 2;
            } else if (howYouRetire == "good") {
                coefficent = 1.5;
            } else {
                coefficent = 1;
            }
            const values = retirementPlan(
                currentExpenses,
                inflationRate,
                yearsToRetirement,
                yearsAfterRetirement,
                monthlyReturnRate
            );
            $("#sip-required").text(`RS. ${values.sipRequired}`);
            $("#years-to-retirement").text(`${yearsToRetirement} years`);
            $("#annual-return-rate").text(`${annualReturnRate} %`);
            $("#corpus-required").text(`Rs. ${values.corpusRequired}`);
        }

        $("#age-slider, #spend-slider")
            .each(function () {
                updateSliderBackground(this);
                updateValues();
            })
            .on("input", function () {
                updateSliderBackground(this);
                updateValues();
            });
        $("#luxury, #good, #normal").on("change", function () {
            updateValues();
        });
    });
</script>
