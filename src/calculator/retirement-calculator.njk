            );
            $(`#${slider.id}-value`).text(slider.value);

            if (slider.id == "age-slider") {
                yearsToRetirement = retirementAge - slider.value;
            } else {
                currentExpenses = slider.value;
            }
        }

        function updateValues() {
            const howYouRetire = $('input[name="retirement"]:checked').val();
            if (howYouRetire == "luxury") {
                coefficent = 2;
            } else if (howYouRetire == "good") {
                coefficent = 1.5;
            } else {
                coefficent = 1;
            }
            const values = retirementPlan(
                currentExpenses,
                inflationRate,
                yearsToRetirement,
                yearsAfterRetirement,
                monthlyReturnRate
            );
            $("#sip-required").text(`RS. ${values.sipRequired}`);
            $("#years-to-retirement").text(`${yearsToRetirement} years`);
            $("#annual-return-rate").text(`${annualReturnRate} %`);
            $("#corpus-required").text(`Rs. ${values.corpusRequired}`);
        }

        $("#age-slider, #spend-slider")
            .each(function () {
                updateSliderBackground(this);
                updateValues();
            })
            .on("input", function () {
                updateSliderBackground(this);
                updateValues();
            });
        $("#luxury, #good, #normal").on("change", function () {
            updateValues();
        });
    });
</script>
