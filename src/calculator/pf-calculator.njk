<script>
    /*
        - Every month, PF grows by adding the employee's contribution and earning interest.
        - After every 12 months, salary increases by the annual increment percentage.
        - Interest is compounded monthly on the running PF balance.
        */
    function calculatePF(
        monthlySalary,
        currentAge,
        contributionPercent,
        annualIncrementPercent,
        interestRate
    ) {
        const retirementAge = 58;
        let pfBalance = 0;
        let monthlyContributionPercent = contributionPercent / 100;
        let monthlyInterestRate = interestRate / 100 / 12;

        for (let age = currentAge; age < retirementAge; age++) {
            for (let month = 1; month <= 12; month++) {
                let monthlyContribution =
                    monthlySalary * monthlyContributionPercent;
                pfBalance =
                    pfBalance * (1 + monthlyInterestRate) + monthlyContribution;
            }
            // After each year, increase salary
            monthlySalary = monthlySalary * (1 + annualIncrementPercent / 100);
        }

        return pfBalance.toFixed(2);
    }
    function updateValues() {
