        const contributionPercentage = $("#contribution-slider").val();
        const annualIncrementPercent = $("#annual-increase-slider").val();
        const interestRate = 8.1;

        const finalPF = calculatePF(
            monthlySalary,
            currentAge,
            contributionPercentage,
            annualIncrementPercent,
            interestRate
        );

        $("#total-amount").text(
            `Rs.${parseInt(finalPF).toLocaleString("en-IN")}`
        );
    }

    $(document).ready(function () {
