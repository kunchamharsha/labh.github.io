<script>
    let course = null;
    const other = 1000000;
    const lawyer = 1500000;
    const engineer = 2000000;
    const mba = 2500000;
    const mbbs = 5000000;
    let course_value = mbbs;

    function educationGoalCalculator(
        currentAge,
        goalAge,
        currentCost,
        inflationRate,
        rateOfReturn,
        currentSavings = 1
    ) {
        const yearsLeft = goalAge - currentAge;
        const monthsLeft = yearsLeft * 12;

        currentCost = parseInt(currentCost);

        const futureCost =
            currentCost *
            Math.pow(1 + parseFloat(inflationRate) / 100, yearsLeft);

        const futureValueOfSavings =
            currentSavings * Math.pow(1 + rateOfReturn / 100, yearsLeft);

        let amountNeeded = futureCost - futureValueOfSavings;

        amountNeeded = Math.max(amountNeeded, 0);

        const monthlyRate = rateOfReturn / 100 / 12;
        let monthlyInvestment;

        if (monthlyRate === 0) {
            monthlyInvestment = amountNeeded / monthsLeft;
        } else {
            monthlyInvestment =
                (amountNeeded * monthlyRate) /
                (Math.pow(1 + monthlyRate, monthsLeft) - 1);
        }

        return (Math.round(monthlyInvestment * 100) / 100).toLocaleString(
            "en-IN",
            { maximumFractionDigits: 0 }
        );
    }

    function updateValues() {
        const currentAge = $("#age-slider").val();
        const goalAge = $("#course-slider").val();
        const inflationRate = $("#inflation-slider").val();
        const rateOfReturn = $("#return-slider").val();
        const estimatedFees =
            $("#estimated-fees").val() == ""
                ? course_value
                : $("#estimated-fees").val();

        const totalAmount = educationGoalCalculator(
            currentAge,
            goalAge,
            estimatedFees,
            inflationRate,
            rateOfReturn
        );

        $("#total-amount").text("₹" + totalAmount);
    }

    $(document).ready(function () {
        $("#estimated-fees").attr("placeholder", course_value);

        $("#dropdown").click(function () {
            $(".dropdown-selected").toggleClass("border-class");
            $(".dropdown-options").toggleClass("display-none");
            $("#dropdown-arrow").toggleClass("transform-y");
        });

        $("#dropdownOptions > div").on("click", function () {
            const value = $(this).data("value");
            course = value;

            if (course == "Other") {
                course_value = other;
            } else if (course == "Lawyer") {
                course_value = lawyer;
            } else if (course == "Engineer") {
                course_value = engineer;
            } else if (course == "MBA") {
                course_value = mba;
            }

            $(".dropdown-selected").toggleClass("border-class");
            $("#selected-cource").text(value);
            $(".dropdown-options").toggleClass("display-none");
            $("#dropdown-arrow").toggleClass("transform-y");

            updateValues();
            $("#estimated-fees").attr("placeholder", course_value);
        });

        $("#estimated-fees").on("input", function () {
            updateValues();
        });

        $('input[name="estimated"]').on("change", function () {
            const value = $(this).val();

            if (value == "yes") {
                $(".current-fees").show();
            } else {
                $(".current-fees").hide();
            }
        });

        function updateSliderBackground(slider) {
            if (slider.id == "age-slider" || slider.id == "course-slider") {
                $(`#${slider.id}-value`).text(
                    `${parseInt(slider.value)} Years`
                );
            } else if (
                slider.id == "return-slider" ||
                slider.id == "inflation-slider"
            ) {
                $(`#${slider.id}-value`).text(`${slider.value} %`);
            }

            const value =
                ((slider.value - slider.min) / (slider.max - slider.min)) * 100;
            $(slider).css(
                "background",
                `linear-gradient(to right, #9b5de5 ${value}%, #d3bfff ${value}%)`
            );
        }

        $("#age-slider, #course-slider, #inflation-slider, #return-slider")
            .each(function () {
                updateSliderBackground(this);
                updateValues();
            })
            .on("input", function () {
                updateSliderBackground(this);
                updateValues();
            });
        $("#luxury, #good, #normal").on("change", function () {
            updateValues();
        });
    });
</script>
