<script>
    $(document).ready(function () {
        let cardWidth = $(".card").width();

        $(".card").hover(
            function () {
                $(this)
                    .find("img")
                    .last()
                    .attr("src", "/assets/calculator-arrow-hover.svg");
            },
            function () {
                $(this)
                    .find("img")
                    .last()
                    .attr("src", "/assets/calculator-arrow.svg");
            }
        );

        function search(event) {
            if (window.innerWidth < 1200) {
                console.log('skipped')
                return; // Do not execute the search function on mobile
            }
            const query = event.target.value.toLowerCase();
            $(".cards").addClass("cards-grid-constant-gap"); // this is added to maintain the gap b/t cards
            $(".card").each(function () {
                const cardHeading = $(this).find(".card-heading").text();
                const cardDescription = $(this)
                    .find(".card-description")
                    .text();
                if (
                    cardHeading.toLowerCase().includes(query) ||
                    cardDescription.toLowerCase().includes(query)
                ) {
                    $(this).show();
                    $(this).width(cardWidth);
                } else {
                    $(this).hide();
                }
            });
            $("html, body").animate({ scrollTop: 0 }, 10);
        }

        $("#search").on("input", search);
        $("#search2").on("input", search);
    });
</script>
