<script>
    function calculateFutureValue(initialAmount, increment, r, i, n) {
        const initialPart =
            initialAmount * (((Math.pow(1 + r, n) - 1) / r) * (1 + r));
        const incrementPart =
            increment *
            (((Math.pow(1 + r, n) - Math.pow(1 + i, n)) / (r - i)) * (1 + r));
        const futureValue = initialPart + incrementPart;
        return [futureValue, initialPart];
    }

    function calculateInvestedAmount(initialAmount, increment, i, n) {
        let totalIncrements = 0;
        for (let year = 0; year < n; year++) {
            totalIncrements += increment * Math.pow(1 + i, year);
        }
        return initialAmount + totalIncrements;
    }

    function updateValues() {
        const investment = $("#investment-slider").val();
        const increment = $("#increment-slider").val();
        const raise = $("#raise-slider").val() / 100;
        const returnRate = $("#return-slider").val() / 100;
        const tenure = $("#tenure-slider").val();

        const [futureValue, initialPart] = calculateFutureValue(
            investment,
            increment,
            returnRate,
            raise,
            tenure
        );

        const returns = futureValue - initialPart;

        $("#total-amount").text(
            `Rs.${parseInt(futureValue).toLocaleString("en-IN")}`
        );
        $("#invested-amt").text(
            `Rs.${parseInt(initialPart).toLocaleString("en-IN")}`
        );
        $("#returns").text(`Rs.${parseInt(returns).toLocaleString("en-IN")}`);
    }

    $(document).ready(function () {
        function updateSliderBackground(slider) {
            if (
                slider.id == "investment-slider" ||
                slider.id == "increment-slider"
            ) {
                $(`#${slider.id}-value`).text(
                    `Rs.${parseInt(slider.value).toLocaleString("en-IN")}`
                );
            } else if (
                slider.id == "return-slider" ||
                slider.id == "raise-slider"
            ) {
                $(`#${slider.id}-value`).text(`${slider.value} %`);
            } else if (slider.id == "tenure-slider") {
                $(`#${slider.id}-value`).text(`${slider.value} Years`);
            }

            const value =
                ((slider.value - slider.min) / (slider.max - slider.min)) * 100;
            $(slider).css(
                "background",
                `linear-gradient(to right, #9b5de5 ${value}%, #d3bfff ${value}%)`
            );
        }

        $(
            "#investment-slider, #raise-slider, #tenure-slider, #return-slider, #increment-slider"
        )
            .each(function () {
                updateSliderBackground(this);
                updateValues();
            })
            .on("input", function () {
                updateSliderBackground(this);
                updateValues();
            });
    });
</script>
