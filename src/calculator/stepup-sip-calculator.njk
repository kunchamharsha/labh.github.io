<script>
    function calculateTotalInvestment(n, p, stepUpRate) {
        let totalInvested = 0.0;

        for (let year = 0; year < n; year++) {
            const sipAmount = p * Math.pow(1 + stepUpRate, year);
            for (let month = 0; month < 12; month++) {
                totalInvested += sipAmount;
            }
        }
        return totalInvested;
    }


    function calculateFutureValue(P, r, n, t, S) {
        const compoundFactor = Math.pow(1 + r / n, n * t);
        const futureValuePrincipal = P * ((compoundFactor - 1) / (r / n));
        const futureValueContributions = S * ((compoundFactor - 1) / (r / n));

        const totalFutureValue =
            futureValuePrincipal + futureValueContributions;
        return totalFutureValue
    }

    function updateValues() {
        const investment = $("#investment-slider").val();
        let increment = $("#increment-slider").val();
        const raise = $("#raise-slider").val() / 100;
        const returnRate = $("#return-slider").val() / 100;
        const tenure = $("#tenure-slider").val();

        increment = investment * raise;

        const returns = calculateFutureValue(
            investment,
            returnRate,
            1,
            tenure,
            increment
        );
        const total_investment = calculateTotalInvestment(tenure, investment, raise)

        const total_amount = returns + total_investment;

        $("#total-amount").text(
            `₹${parseInt(total_amount).toLocaleString("en-IN")}`
        );
        $("#invested-amt").text(
            `₹${parseInt(total_investment).toLocaleString("en-IN")}`
        );
        $("#returns").text(`₹${parseInt(returns).toLocaleString("en-IN")}`);
    }

    $(document).ready(function () {
        function updateSliderBackground(slider) {
            if (
                slider.id == "investment-slider" ||
                slider.id == "increment-slider"
            ) {
                $(`#${slider.id}-value`).text(
                    `₹${parseInt(slider.value).toLocaleString("en-IN")}`
                );
            } else if (
                slider.id == "return-slider" ||
                slider.id == "raise-slider"
            ) {
                $(`#${slider.id}-value`).text(`${slider.value} %`);
            } else if (slider.id == "tenure-slider") {
                $(`#${slider.id}-value`).text(`${slider.value} Years`);
            }

            const value =
                ((slider.value - slider.min) / (slider.max - slider.min)) * 100;
            $(slider).css(
                "background",
                `linear-gradient(to right, #9b5de5 ${value}%, #d3bfff ${value}%)`
            );
        }

        $(
            "#investment-slider, #raise-slider, #tenure-slider, #return-slider, #increment-slider"
        )
            .each(function () {
                updateSliderBackground(this);
                updateValues();
            })
            .on("input", function () {
                updateSliderBackground(this);
                updateValues();
            });
    });
</script>
